---
const email = 'hello@rapidsites.co.za';
---
<form action="/.netlify/functions/send-intake" method="POST" class="card p-4 sm:p-5">
  <div class="grid sm:grid-cols-2 gap-3">
    <div class="sm:col-span-2">
      <label for="business_name" class="label">Business name</label>
      <input id="business_name" name="business_name" type="text" required class="input" placeholder="Your company name" />
    </div>
    <div>
      <label for="contact_name" class="label">Full name</label>
      <input id="contact_name" name="contact_name" type="text" required class="input" placeholder="Your name" />
    </div>
    <div>
      <label for="phone" class="label">Phone (+27)</label>
      <input id="phone" name="phone" type="tel" required pattern="^\+27\s?\d{2}\s?\d{3}\s?\d{4}$" class="input" placeholder="+27 61 463 1005" />
    </div>
    <div class="sm:col-span-2">
      <label for="email" class="label">Email</label>
      <input id="email" name="email" type="email" required class="input" placeholder="you@example.com" />
    </div>
    <div class="sm:col-span-2">
      <label for="additional_notes" class="label">Project details (optional)</label>
      <textarea id="additional_notes" name="additional_notes" rows="3" class="textarea" placeholder="Tell us about your business and goals"></textarea>
    </div>
    
    <!-- Hidden fields for non-critical data -->
    <input type="hidden" name="location" value="South Africa" />
    <input type="hidden" name="industry" value="Not specified" />
    <input type="hidden" name="business_description" value="Quick contact form submission" />
    <input type="hidden" name="services" value="To be discussed" />
    <input type="hidden" name="target_customers" value="To be discussed" />
    <input type="hidden" name="source" value="homepage_contact_form" />
    
    <!-- Honeypot field for spam protection -->
    <input type="text" name="bot-field" style="display: none;" />
  </div>
  <div class="mt-3 flex flex-col sm:flex-row gap-2">
    <button type="submit" class="button-primary w-full sm:w-auto">Send Brief</button>
            <a href="https://wa.me/27614631005" target="_blank" rel="noopener" class="button-secondary w-full sm:w-auto">WhatsApp Instead</a>
  </div>
  <p class="mt-2 text-[11px] text-neutral-500">Submitting sends your details directly to us. We'll respond within one business day.</p>
</form>
